{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "@types/node"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "https://deno.land/std@0.224.0/*": [
        "./node_modules/@types/deno-std/*"
      ],
      "https://esm.sh/*": [
        "./node_modules/@types/esm-sh/*"
      ]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "supabase/functions" // ← ここを追加
  ]
}